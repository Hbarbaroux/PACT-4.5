<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#000000"/>
                    <corners android:radius="30sp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:centerColor="@color/colorButtonPressed"
                        android:endColor="#edce7d"
                        android:startColor="@color/colorButtonPressed"
                        android:type="linear" />
                    <corners android:radius="30sp" />
                    <padding
                        android:left="20dp"
                        android:right="20dp"
                        android:bottom="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#000000"/>
                    <corners android:radius="30sp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:centerColor="@color/colorButton"
                        android:endColor="#edce7d"
                        android:startColor="@color/colorButton"
                        android:type="linear" />
                    <corners android:radius="30sp" />
                    <padding
                        android:left="20dp"
                        android:right="20dp"
                        android:bottom="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>