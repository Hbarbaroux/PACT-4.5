<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#000000"/>
                    <corners android:radius="3sp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/colorButtonPressed"/>
                    <corners android:radius="3sp" />
                    <padding
                        android:left="20dp"
                        android:right="20dp"
                        android:bottom="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#000000"/>
                    <corners android:radius="3sp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/colorButton"/>
                    <corners android:radius="3sp" />
                    <padding
                        android:left="20dp"
                        android:right="20dp"
                        android:bottom="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>