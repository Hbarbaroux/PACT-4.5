<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hugo.guitarledgend.activities.PostPlayingActivity">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph_PostPlayingActivity" />

    <TextView
        android:background="@drawable/ic_star"
        android:textSize="30sp"
        android:layout_height="100dp"
        android:id="@+id/score"
        android:minHeight="50dip"
        android:minWidth="120dip"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_width="100dp"
        android:layout_below="@+id/graph_PostPlayingActivity"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/button"
        android:text="Rejouer zone"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replay_area_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/button"
        android:text="Menu"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_button"
        android:layout_alignBaseline="@+id/replay_button"
        android:layout_alignBottom="@+id/replay_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Button
        style="@style/button"
        android:text="Rejouer"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replay_button"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_above="@+id/replay_area_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="play"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButton"
        android:layout_alignBottom="@+id/score"
        android:layout_toLeftOf="@+id/score"
        android:layout_toStartOf="@+id/score" />


</RelativeLayout>
