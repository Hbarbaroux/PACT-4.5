<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/graph_title_statsdetailfragment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/graph_title_statsdetailfragment"
        android:id="@+id/graph_title2_statsdetailfragment"/>


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph_stats_fragment"
        android:layout_below="@+id/graph_title2_statsdetailfragment"/>

    <TextView
        android:textSize="30sp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/score_statsFragment"
        android:layout_marginTop="5dp"
        android:minHeight="50dip"
        android:minWidth="120dip"
        android:gravity="center"
        android:layout_below="@+id/graph_stats_fragment"
        android:layout_centerHorizontal="true" />


</RelativeLayout>