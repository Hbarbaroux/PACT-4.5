<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hugo.guitarledgend">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_appli"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.stats.StatsGlobalActivity" />
        <activity android:name=".activities.AddChooseActivity" />
        <activity android:name=".activities.ChooseSpeedActivity" />
        <activity android:name=".activities.ChoosePartitionActivity" />
        <activity android:name=".activities.AddPartitionActivity" />
        <activity android:name=".activities.AskingPlayActivity" />
        <activity android:name=".activities.stats.ChoosePartitionInStatsActivity" />
        <activity android:name=".activities.stats.StatsDetailActivity" />
        <activity android:name=".activities.PartitionPlayingActivity" />
        <activity
            android:name=".activities.profiles.ProfilesActivity"
            android:label="@string/title_activity_profils"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.PostPlayingActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".bluetooth.BluetoothActivity" />
        <activity android:name=".bluetooth.TestBluetoothActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.TestPlayingActivity"
            android:label="@string/title_activity_test_playing"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activities.PreferencesModifyPartitionActivity"></activity>
    </application>

</manifest>