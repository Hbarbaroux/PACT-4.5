<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hugo.guitarledgend">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ProfilesActivity" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.SettingsActivity"></activity>

        <activity android:name=".Activities.StatsActivity" />
        <activity android:name=".Databases.StatsSQLiteHelper" />
        <activity android:name=".Databases.ProfilesSQLiteHelper" />
        <activity android:name=".Databases.PartitionsSQLiteHelper" />
        <activity android:name=".Activities.StartPlayActivity" />
        <activity android:name=".Activities.ChooseSpeedActivity" />
        <activity android:name=".Activities.ChoosePartitionActivity" />
        <activity android:name=".Activities.AddPartitionActivity" />
        <activity android:name=".Activities.PlayPartitionActivity" />
        <activity android:name=".Activities.StatsShownActivity" />


    </application>

</manifest>